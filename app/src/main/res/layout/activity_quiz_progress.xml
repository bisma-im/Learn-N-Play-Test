<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/theme"
    tools:context=".QuizProgressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/back"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:backgroundTint="#00FBFBFB"
            android:contentDescription="back button"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconPadding="50dp"
            app:iconSize="40dp"
            app:iconTint="@color/secondary_theme"
            app:iconTintMode="multiply" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.7"
            android:backgroundTint="#FFD600"
            android:gravity="center_horizontal"
            android:shadowColor="#841818"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Quiz Progress"
            android:textColor="@color/secondary_theme"
            android:textColorHighlight="#473C02"
            android:textSize="34sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Current Score"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/secondary_theme" />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/secondary_theme" />

</LinearLayout>