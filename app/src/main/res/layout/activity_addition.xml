<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:orientation="vertical"
    tools:context=".AdditionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/back"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:backgroundTint="#00FBFBFB"
            android:contentDescription="back button"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconPadding="50dp"
            app:iconSize="40dp"
            app:iconTint="@color/secondary_theme"
            app:iconTintMode="multiply" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.7"
            android:backgroundTint="#FFD600"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center_horizontal"
            android:shadowColor="#841818"
            android:text="Let's Add!"
            android:textColor="@color/secondary_theme"
            android:textColorHighlight="#473C02"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ball" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="@color/secondary_theme"
                android:fontFamily="@font/alfa_slab_one"
                android:layout_gravity="center_horizontal"
                android:text="+" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ball" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ball" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ball" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="="
                android:textColor="@color/secondary_theme"
                android:textSize="27sp" />
            <EditText
                android:id="@+id/answer1"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="@color/secondary_theme"
                android:fontFamily="@font/alfa_slab_one"
                android:background="#00000000"
                android:layout_marginRight="10dp"
                android:hint="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textSize="27sp"
                        android:textColor="@color/secondary_theme"
                        android:fontFamily="@font/alfa_slab_one"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_horizontal"
                        android:text="=" />

                    <EditText
                        android:id="@+id/answer2"
                        android:layout_width="48dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:gravity="center"
                        android:textSize="27sp"
                        android:textColor="@color/secondary_theme"
                        android:fontFamily="@font/alfa_slab_one"
                        android:background="#00000000"
                        android:layout_marginRight="10dp"
                        android:hint="0" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="27sp"
                    android:textColor="@color/secondary_theme"
                    android:fontFamily="@font/alfa_slab_one"
                    android:layout_marginLeft="100dp"
                    android:layout_gravity="left"
                    android:text="+" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />
                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />
                    <ImageView
                        android:id="@+id/imageView25"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />
                    <ImageView
                        android:id="@+id/imageView26"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />
                    <ImageView
                        android:id="@+id/imageView27"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ant" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cake" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cake" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="@color/secondary_theme"
                android:fontFamily="@font/alfa_slab_one"
                android:layout_gravity="center_horizontal"
                android:text="+" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cake" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cake" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cake" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="27sp"
                android:textColor="@color/secondary_theme"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="=" />

            <EditText
                android:id="@+id/answer3"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="@color/secondary_theme"
                android:fontFamily="@font/alfa_slab_one"
                android:background="#00000000"
                android:layout_marginRight="10dp"
                android:hint="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/apple" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="@color/secondary_theme"
                android:fontFamily="@font/alfa_slab_one"
                android:layout_gravity="center_horizontal"
                android:text="+" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/apple" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="27sp"
                android:textColor="@color/secondary_theme"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="=" />

            <EditText
                android:id="@+id/answer4"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="center"
                android:textSize="27sp"
                android:textColor="@color/secondary_theme"
                android:fontFamily="@font/alfa_slab_one"
                android:background="#00000000"
                android:hint="0"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:backgroundTint="#FFAB00"
            android:fontFamily="@font/alfa_slab_one"
            android:textColor="@color/secondary_theme"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>